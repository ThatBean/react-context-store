{
  "name": "react-context-store",
  "version": "0.1.0",
  "author": "thatbean",
  "license": "MIT",
  "description": "Make use of React context with: ContextProvider, ContextConnector and ContextStore",
  "keywords": [
    "connector",
    "provider",
    "store",
    "context",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thatbean/react-context-store.git"
  },
  "peerDependencies": {
    "react": "*",
    "prop-types": "*"
  },
  "devDependencies": {
    "dev-dep-babel-react": "^0.0.5"
  },
  "main": "library/index.js",
  "module": "module/index.js",
  "scripts": {
    "library": "cross-env NODE_ENV=production BABEL_ENV=library babel ./source --out-dir ./library",
    "library-dev": "cross-env NODE_ENV=development BABEL_ENV=library babel ./source --out-dir ./library --watch",
    "module": "cross-env NODE_ENV=production BABEL_ENV=module babel ./source --out-dir ./module",
    "build": "npm run library && npm run module",
    "prepare": "npm run build"
  }
}
